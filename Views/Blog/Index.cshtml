@model TravelTrip.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}
<link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
<link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
<!----webfonts---->
<link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
<!----//webfonts---->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<!--end slider -->
<!--script-->
<script type="text/javascript" src="~/web2/js/move-top.js"></script>
<script type="text/javascript" src="~/web2/js/easing.js"></script>
<!--/script-->
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $(".scroll").click(function (event) {
            event.preventDefault();
            $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
        });
    });
</script>
<div class="content">
    <div class="container">
        <div class="content-grids">
            <div class="col-md-8 content-main">
                <div class="content-grid">
                    @foreach (var item in Model.Deger3)
                    {
                        <div class="content-grid-info">
                            <img src="@item.BlogImage" alt="" />
                            <div class="post-info">
                                <h4><a href="/Blog/BlogDetay/@item.Id">@item.Baslik</a>  @item.Tarih.ToShortDateString()</h4>
                                <a href="/Blog/BlogDetay/@item.Id"><span></span>READ MORE</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-4 content-right">
                <div class="recent">
                    <h3>Son Bloglar</h3>
                    <ul>
                        @foreach (var item in Model.Deger4)
                        {
                            <li><a href="/Blog/BlogDetay/@item.Id">@item.Baslik</a></li>
                        }
                    </ul>
                </div>
                <div class="comments">
                    <h3>Son Yorumlar</h3>
                    <ul>
                        @foreach (var item in Model.Deger2)
                        {
                            <li><a href="/Blog/BlogDetay/@item.BlogId">@item.KullaniciAdi </a> on <a href="/Blog/BlogDetay/@item.BlogId">@item.YapilanYorum.Substring(0,3) ...</a></li>
                        }
                        </ul>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>