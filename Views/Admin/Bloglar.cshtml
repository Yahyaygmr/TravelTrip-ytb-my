@using TravelTrip.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Bloglar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<h2>Bloglar</h2>
<div class="m-3">
    <a href="/Admin/BlogEkle/" class="btn btn-sm btn-outline-primary form-control">+ Yeni Blog</a>
</div>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@{i++;}@i</td>
                    <td><img src="@item.BlogImage" width="80" /></td>
                    <td>@item.Baslik</td>
                    <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a href="/Admin/BlogGuncelle/@item.Id" class="btn btn-sm btn-info">Düzenle</a>
                        <a href="/Admin/BlogSil/@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        <a href="/Blog/BlogDetay/@item.Id" class="btn btn-sm btn-primary" target="_blank">Sitede Gör</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
