@using TravelTrip.Models.Siniflar
@model List<Yorum>
@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<h2>Yorumlar</h2>

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Blog</th>
                <th>Kullanıcı Adı</th>
                <th>Mail</th>
                <th>Yorum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@{i++;}@i</td>
                    <td>@item.Blog.Baslik</td>
                    <td>@item.KullaniciAdi</td>
                    <td>@item.Mail</td>
                    <td>@item.YapilanYorum</td>
                    <td>
                        <a href="/Admin/YorumGuncelle/@item.Id" class="btn btn-sm btn-outline-info form-control mb-1">Düzenle</a>
                        <a href="/Admin/YorumSil/@item.Id" class="btn btn-sm btn-outline-danger form-control mb-1">Sil</a>
                        <a href="/Blog/BlogDetay/@item.BlogId" class="btn btn-sm btn-outline-success form-control mb-1" target="_blank">Bloğa Git</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>