@using TravelTrip.Models.Siniflar
@model List<Blog>
    @{ 
        int i = 0;
    }
<h4>Son Yayınlanan Bloglar</h4>
<ul class="list list-pad">
    @foreach (var item in Model)
    {
        <li class="list-bg"><span>@{i++;} @i. </span><a href="/Blog/BlogDetay/@item.Id">@item.Baslik</a></li>
    }


</ul>
<a href="/Blog/Index/" class="link1">Bütün blogları gör...</a>
